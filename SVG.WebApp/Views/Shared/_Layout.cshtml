@*
  Layout base para as Views MVC
  Contém Navbar + Filtros Globais BI + JS Global
*@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DOE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="app-bg">

    <!-- =========================
         NAVBAR
         ========================= -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">

                @if (UserContext.IsAdmin)
                {
                    <a class="navbar-brand" asp-controller="Operacao" asp-action="Index">SVG</a>
                }

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">

                    <!-- ESQUERDA -->
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#"
                               role="button" data-bs-toggle="dropdown">
                                Operação
                            </a>

                            <ul class="dropdown-menu">
                                @if (UserContext.IsAdmin)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Operacao"
                                           asp-action="Create">
                                            Nova Operação
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Operacao"
                                       asp-action="OperacoesSVGAberto">
                                        SVG Aberto
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bi" asp-action="Dashboard">
                                BI / Dashboard
                            </a>
                        </li>

                    </ul>

                    <!-- DIREITA -->
                    <ul class="navbar-nav ms-auto">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Entrar</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   role="button" data-bs-toggle="dropdown">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                            Sair
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- =========================
         FILTROS GLOBAIS BI
         ========================= -->
    <section class="border-bottom bg-light">
        <div class="container py-3">

            <!-- FILTROS ATIVOS -->
            <div id="biFiltrosAtivos" class="mb-2 d-none">
                <span class="text-muted me-2">Filtros ativos:</span>

                <span id="biOperadorAtivo"
                      class="badge bg-primary me-1">
                </span>
            </div>

            <!-- FILTROS -->
            <div class="row g-2 align-items-end">

                <div class="col-md-3">
                    <label class="form-label mb-1">Ano</label>
                    <select class="form-select" data-bi-filter="ano" id="biAno">
                        <option value="">Todos</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label mb-1">Período</label>
                    <select class="form-select" data-bi-filter="periodo" id="biPeriodo">
                        <option value="mensal">Mensal</option>
                        <option value="bimestral">Bimestral</option>
                        <option value="trimestral">Trimestral</option>
                        <option value="semestral">Semestral</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label mb-1">Seção</label>
                    <select class="form-select" data-bi-filter="secaoId" id="biSecao">
                        <option value="">Todas</option>
                    </select>
                </div>

                <div class="col-md-2 text-end">
                    <button class="btn btn-outline-primary w-100"
                            onclick="biReload()">
                        Aplicar
                    </button>
                </div>

            </div>
        </div>
    </section>


    <!-- =========================
         CONTEÚDO
         ========================= -->
    <main class="pb-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container py-2 text-center">
            &copy; Op. 73 - @DateTime.Now.Year - Divisão de Operações Especiais.
        </div>
    </footer>

    <!-- =========================
         SCRIPTS
         ========================= -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @RenderSection("Scripts", required: false)

    <!-- =========================
         JS GLOBAL BI (POWER BI FEELING)
         ========================= -->
    <script>
        const biState = {
            ano: null,
            periodo: "mensal",
            secaoId: null,
            operadorId: null
        };

        function biLoadState() {
            const s = sessionStorage.getItem("biState");
            if (s) Object.assign(biState, JSON.parse(s));
        }

        function biSaveState() {
            sessionStorage.setItem("biState", JSON.stringify(biState));
        }

        function biReload() {
            biSaveState();
            atualizarFiltrosAtivos();
            document.dispatchEvent(
                new CustomEvent("bi:changed", { detail: biState })
            );
        }


        document.addEventListener("DOMContentLoaded", () => {
            biLoadState();

            document.querySelectorAll("[data-bi-filter]").forEach(el => {
                el.value = biState[el.dataset.biFilter] ?? "";
                el.addEventListener("change", e => {
                    biState[el.dataset.biFilter] = e.target.value || null;
                });
            });

            biReload();
        });

        function alturaGraficoPorPeriodo(periodo) {
            switch (periodo) {
                case "mensal":     return 120;
                case "bimestral":  return 100;
                case "trimestral": return 90;
                case "semestral":  return 80;
                default: return 100;
            }
        }

        function atualizarFiltrosAtivos() {

            const container = document.getElementById("biFiltrosAtivos");
            const badgeOperador = document.getElementById("biOperadorAtivo");

            let ativo = false;

            // Operador
            if (biState.operadorId) {
                badgeOperador.textContent = `Operador filtrado`;
                badgeOperador.onclick = () => {
                    biState.operadorId = null;
                    biReload();
                };
                badgeOperador.classList.remove("d-none");
                ativo = true;
            } else {
                badgeOperador.classList.add("d-none");
            }

            container.classList.toggle("d-none", !ativo);
        }


        function atualizarIndicadores() {
            const badge = document.getElementById("biOperadorAtivo");

            if (biState.operadorId) {
                badge.textContent = "Operador filtrado";
                badge.classList.remove("d-none");
            } else {
                badge.classList.add("d-none");
            }
        }


    </script>

    <!-- =========================
         ESTILOS
         ========================= -->
    <style>
        .app-bg {
            min-height: 100vh;
            background-image: url('/images/bg-operacoes.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

            .app-bg::before {
                content: "";
                position: fixed;
                inset: 0;
                background: rgba(255,255,255,0.88);
                z-index: -1;
            }
    </style>

</body>
</html>
