﻿@*

  Layout base para as Views MVC
  Coloque aqui o HTML comum (head, navbar, scripts, etc.)
*@

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DOE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="app-bg">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">

                @if (UserContext.IsAdmin)
                {
                    <!-- Brand -->
                    <a class="navbar-brand" asp-controller="Operacao" asp-action="Index">
                        SVG
                    </a>
                }

                <!-- Botão hamburguer (mobile) -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarMenu">

                    <!-- LADO ESQUERDO -->
                    @if (UserContext.IsAdmin)
                    {
                        <ul class="navbar-nav me-auto">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="operacaoDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Operação
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="operacaoDropdown">

                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item submenu-toggle" href="#">
                                            Nova Operação
                                        </a>

                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-controller="Operacao"
                                                   asp-action="Create"
                                                   asp-route-tipoOperacao="Create">
                                                    Nova Operação
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-controller="Operacao"
                                                   asp-action="CreateReforcoPlantao">
                                                    S.O / Delta
                                                </a>
                                            </li>
                                        </ul>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Operacao"
                                           asp-action="Index">
                                            Detalhes da Operação
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Operacao"
                                           asp-action="OperacoesSVGAberto">
                                            SVG Aberto
                                        </a>
                                    </li>

                                </ul>
                            </li>

                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav me-auto">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="operacaoDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Operação
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="operacaoDropdown">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Operacao"
                                           asp-action="OperacoesSVGAbertoOperador">
                                            SVG Aberto
                                        </a>
                                    </li>
                                </ul>
                            </li>

                        </ul>
                    }

                    <!-- LADO DIREITO (LOGIN) -->
                    <ul class="navbar-nav ms-auto">

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Auth"
                                   asp-action="Login">
                                    Entrar
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Auth"
                                           asp-action="Logout">
                                            Sair
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-2">
            <span>&copy; @DateTime.Now.Year - SVG</span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".dropdown-submenu > .submenu-toggle").forEach(function (toggle) {
                toggle.addEventListener("click", function (e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const submenu = toggle.nextElementSibling;
                    if (!submenu) return;

                    const rootMenu = toggle.closest(".dropdown-menu");
                    rootMenu.querySelectorAll(".dropdown-submenu > .dropdown-menu.show").forEach(function (open) {
                        if (open !== submenu) open.classList.remove("show");
                    });

                    submenu.classList.toggle("show");
                });
            });

            document.querySelectorAll(".nav-item.dropdown").forEach(function (dd) {
                dd.addEventListener("hidden.bs.dropdown", function () {
                    dd.querySelectorAll(".dropdown-submenu > .dropdown-menu.show").forEach(function (sm) {
                        sm.classList.remove("show");
                    });
                });
            });
        });
    </script>

    <style>

        input[type="datetime-local"] {
            line-height: 1.25;
            padding-top: 0.45rem;
            padding-bottom: 0.45rem;
        }


        /* Bootstrap modal: garante que o modal fique acima do backdrop */
        .modal-backdrop {
            z-index: 1990 !important;
        }

        .modal {
            z-index: 2000 !important;
        }

        /* =========================
           DROPDOWN SUBMENU
           ========================= */
        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu > .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -0.25rem;
            }

        /* melhora no mobile: submenu abre "para baixo" */
        @@media (max-width: 991.98px) {
            .dropdown-submenu > .dropdown-menu {
                left: 0;
                top: 100%;
                margin-top: 0.25rem;
            }
        }

        /* Fundo + overlay seguros */
        .app-bg {
            min-height: 100vh;
            position: relative;
            isolation: isolate;
            background-image: url('/images/bg-operacoes.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

            .app-bg::before {
                content: "";
                position: fixed;
                inset: 0;
                background: rgba(255, 255, 255, 0.88);
                z-index: -1; /* 🔑 atrás de tudo */
                pointer-events: none;
            }

            /* NÃO force z-index no main/footer */
            .app-bg > main,
            .app-bg > footer {
                position: relative;
                z-index: auto;
            }

        .navbar {
            position: relative;
            z-index: 10;
        }

        /* Dropdown acima do header */
        .dropdown-menu {
            z-index: 20;
        }

        /* Modal e backdrop (garantia total) */
        .modal {
            z-index: 1050;
        }

        .modal-backdrop {
            z-index: 1040;
        }

    </style>

</body>
</html>
