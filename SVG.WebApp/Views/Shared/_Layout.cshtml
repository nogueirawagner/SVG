@*
  Layout base para as Views MVC
  Coloque aqui o HTML comum (head, navbar, scripts, etc.)
*@

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DOE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    DOE
                </a>
                <a href="@Url.Action("ResumoOperadores", "Operador", new { })" class="navbar-brand" title="Operadores">Operadores Operação</a>
                <a href="@Url.Action("Index", "Operacao", new { })" class="navbar-brand" title="Operações"> Operações</a>
                <a href="@Url.Action("Index", "Operador", new { })" class="navbar-brand" title="Operações"> Operadores</a>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-2">
            <span>&copy; @DateTime.Now.Year - SVG</span>
        </div>
    </footer>

    <!-- Bootstrap JS (opcional, mas bom ter) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
