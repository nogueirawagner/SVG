@model SVG.App.ViewModels.OperacaoViewModel

@{
    ViewData["Title"] = "Editar Operação";
}

<div class="container mt-4">
    <h2>Editar Operação</h2>
    <hr />

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="ID" />

        <div class="row mb-3">
            <div class="col-md-3">
                <label asp-for="DataHora" class="form-label"></label>
                <input asp-for="DataHora" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>

            <div class="col-md-5">
                <label asp-for="Objeto" class="form-label"></label>
                <input asp-for="Objeto" class="form-control" />
                <span asp-validation-for="Objeto" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="TipoOperacaoID" class="form-label">Tipo de Operação</label>
                <select asp-for="TipoOperacaoID" class="form-select"
                        asp-items="ViewBag.TipoOperacaoID">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="TipoOperacaoID" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="DP" class="form-label"></label>
                <input asp-for="DP" class="form-control" />
                <span asp-validation-for="DP" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Coordenador" class="form-label"></label>
                <input asp-for="Coordenador" class="form-control" />
                <span asp-validation-for="Coordenador" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="QtdEquipe" class="form-label"></label>
                <input asp-for="QtdEquipe" class="form-control" />
                <span asp-validation-for="QtdEquipe" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar alterações</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
