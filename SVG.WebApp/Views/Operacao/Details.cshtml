@model SVG.App.ViewModels.OperacaoViewModel

@{
    ViewData["Title"] = "Detalhes da Operação";
}

<div class="container mt-4">
    <h2>Detalhes da Operação</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Data/Hora</dt>
        <dd class="col-sm-9">@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Objeto</dt>
        <dd class="col-sm-9">@Model.Objeto</dd>

        <dt class="col-sm-3">Tipo de Operação</dt>
        <dd class="col-sm-9">@Model.TipoOperacaoNome</dd>

        <dt class="col-sm-3">DP</dt>
        <dd class="col-sm-9">@Model.DP</dd>

        <dt class="col-sm-3">Coordenador</dt>
        <dd class="col-sm-9">@Model.Coordenador</dd>

        <dt class="col-sm-3">Qtd. Equipes</dt>
        <dd class="col-sm-9">@Model.QtdEquipe</dd>
    </dl>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Editar</a>
    </div>
</div>
