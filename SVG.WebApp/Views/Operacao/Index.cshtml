@model IEnumerable<SVG.App.ViewModels.OperacaoViewModel>

@{
    ViewData["Title"] = "Operações";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Operações</h2>
        <a href="@Url.Action("Create", "Operacao", new { })" class="btn btn-primary">Nova Operação</a>
    </div>

    <form asp-action="Index" method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="search" value="@ViewData["search"]"
                   class="form-control" placeholder="Buscar por objeto ou coordenador..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Buscar</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Data/Hora</th>
                        <th>Objeto</th>
                        <th>Tipo</th>
                        <th>DP</th>
                        <th>Coordenador</th>
                        <th class="text-center">Qtd. Equipes</th>
                        <th class="text-end" style="width: 180px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Objeto</td>
                            <td>@item.TipoOperacaoNome</td>
                            <td>@item.DP</td>
                            <td>@item.Coordenador</td>
                            <td class="text-center">@item.QtdEquipe</td>
                            <td class="text-end">
                                <a href="@Url.Action("DetalhesOperacao", "Operacao", new { pOperacaoID = item.ID })"
                                   class="btn btn-sm btn-outline-secondary me-1">
                                    Detalhes
                                </a>
                                <a href="@Url.Action("Edit", "Operacao", new { id = item.ID })"
                                   class="btn btn-sm btn-outline-secondary me-1">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID"
                                   class="btn btn-sm btn-outline-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Nenhuma operação encontrada.</div>
    }
</div>
