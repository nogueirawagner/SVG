@{
    Layout = "_LayoutBi";
    ViewData["Title"] = "BI / Operações";
}

<canvas id="graficoOperacoes"></canvas>

@section Scripts {
    <script>
        let chartOp;

        document.addEventListener("bi:changed", async () => {
            const qs = buildPeriodicidadeQuery();
            const dados = await fetch(`/bi/operacoes?${qs}`).then(r => r.json());

            if (chartOp) chartOp.destroy();

            chartOp = new Chart(
                document.getElementById("graficoOperacoes"),
                {
                    type: "line",
                    data: {
                        labels: dados.map(d => d.label),
                        datasets: [{
                            label: "Operações",
                            data: dados.map(d => d.total)
                        }]
                    }
                }
            );
        });
    </script>
}
