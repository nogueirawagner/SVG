@{
    ViewData["Title"] = "BI / Dashboard";
}

<div class="container mt-4">

    <h4 class="mb-3">Visão Geral</h4>

    <div class="row g-3">

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Operações</div>
                    <h3 id="kpiOperacoes">–</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Operadores</div>
                    <h3 id="kpiOperadores">–</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">SVG</div>
                    <h3 id="kpiSvg">–</h3>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("bi:changed", async e => {

            const qs = new URLSearchParams({
                ano: biState.ano,
                periodo: biState.periodo,
                secaoId: biState.secaoId,
                operadorId: biState.operadorId
            });

            const d = await fetch(`/api/bi/dashboard?${qs}`)
                .then(r => r.json());

            kpiOperacoes.innerText = d.totalOperacoes;
            kpiOperadores.innerText = d.totalOperadores;
            kpiSvg.innerText = `${d.percentualSvg}%`;
        });

    </script>
}
