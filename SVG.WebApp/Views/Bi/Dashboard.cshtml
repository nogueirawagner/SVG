@{
    Layout = "_LayoutBi";
    ViewData["Title"] = "BI / Indicadores";
}

<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6>Total Operações</h6>
                <h3 id="kpiOperacoes">0</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6>Total SVG</h6>
                <h3 id="kpiSvg">0</h3>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("bi:changed", async () => {
            const qs = buildPeriodicidadeQuery();
            const dados = await fetch(`/bi/dashboard?${qs}`).then(r => r.json());

            document.getElementById("kpiOperacoes").textContent = dados.totalOperacoes;
            document.getElementById("kpiSvg").textContent = dados.totalSvg;
        });
    </script>
}
