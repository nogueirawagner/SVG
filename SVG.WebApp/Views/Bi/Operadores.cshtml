@{
    Layout = "_LayoutBi";
    ViewData["Title"] = "BI / Operadores";
}

<canvas id="graficoOperadores"></canvas>

@section Scripts {
    <script>
        let chartOpd;

        document.addEventListener("bi:changed", async () => {
            const qs = buildPeriodicidadeQuery();
            const dados = await fetch(`/bi/operadores?${qs}`).then(r => r.json());

            if (chartOpd) chartOpd.destroy();

            chartOpd = new Chart(
                document.getElementById("graficoOperadores"),
                {
                    type: "bar",
                    data: {
                        labels: dados.map(d => d.label),
                        datasets: [{
                            label: "Participações",
                            data: dados.map(d => d.total)
                        }]
                    }
                }
            );
        });
    </script>
}
