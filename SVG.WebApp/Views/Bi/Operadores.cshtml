@{
    Layout = "_LayoutBi";
    ViewData["Title"] = "BI / Operadores";
}

<div class="container mt-4">
    <canvas id="graficoOperadores"></canvas>
</div>

@section Scripts {
    <script>
        let chartOperadores;

        document.addEventListener("bi:changed", async () => {

            const qs = buildBiQuery();

            const dados = await fetch(`/api/bi/operadores?${qs}`)
                .then(r => r.json());

            if (chartOperadores) chartOperadores.destroy();

            chartOperadores = new Chart(
                document.getElementById("graficoOperadores"),
                {
                    type: "bar",
                    data: {
                        labels: dados.map(d => d.label),
                        datasets: [{
                            label: "Participações",
                            data: dados.map(d => d.total)
                        }]
                    }
                }
            );
        });
    </script>
}
