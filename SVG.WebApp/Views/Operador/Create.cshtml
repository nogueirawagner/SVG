@model SVG.App.ViewModels.OperadorViewModel

@{
    ViewData["Title"] = "Novo Operador";
}

<div class="container mt-4">
    <h2>Cadastrar Operador</h2>
    <hr />

    <form asp-action="Create" method="post" class="mt-3">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Matricula" class="form-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Sessao" class="form-label"></label>
                <input asp-for="Sessao" class="form-control" />
                <span asp-validation-for="Sessao" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Telefone" class="form-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
