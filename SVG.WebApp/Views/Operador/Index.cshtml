@model IEnumerable<SVG.App.ViewModels.OperadorViewModel>

@{
    ViewData["Title"] = "Operadores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Operadores</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Novo Operador
        </a>
    </div>

    <!-- Filtro de busca simples -->
    <form asp-action="Index" method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text"
               name="search"
               value="@ViewData["search"]"
               class="form-control"
               placeholder="Buscar..." />

        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Buscar</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Matrícula</th>
                        <th>Telefone</th>
                        <th>Sessao</th>
                        <th class="text-end" style="width: 160px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Matricula</td>
                        <td>@item.Telefone</td>
                        <td>@item.Sessao</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary me-1">
                                Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary me-1">
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Nenhum operador encontrado.
        </div>
    }
</div>
